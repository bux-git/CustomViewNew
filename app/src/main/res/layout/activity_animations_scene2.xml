<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_red"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/shape_circle"
        app:layout_constraintEnd_toStartOf="@id/tv_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_orange" />


    <TextView
        android:id="@+id/tv_blue"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/shape_circle"
        android:backgroundTint="@android:color/holo_blue_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_red"
        app:layout_constraintTop_toTopOf="@id/tv_red" />


    <TextView
        android:id="@+id/tv_orange"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/shape_circle"
        android:backgroundTint="@android:color/holo_orange_dark"
        app:layout_constraintEnd_toStartOf="@id/tv_green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_green"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/shape_circle"
        android:backgroundTint="@android:color/holo_green_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_orange"
        app:layout_constraintTop_toTopOf="@id/tv_orange" />

</androidx.constraintlayout.widget.ConstraintLayout>